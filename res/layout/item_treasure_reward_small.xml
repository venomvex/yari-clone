<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/treasure_reward_item_bg_small"
    android:layout_width="67dp"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/treasure_reward_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="12dp"/>
    <include
        android:id="@+id/star_layout"
        android:layout_width="67dp"
        android:layout_height="10dp"
        android:layout_below="@+id/treasure_reward_icon"
        android:layout_centerHorizontal="true"
        layout="@layout/include_star_7dp_layout"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/star_layout">
        <ImageView
            android:id="@+id/diamond_icon"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginTop="3dp"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="11sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:maxLines="1"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/tag_view"
        android:paddingTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:minWidth="32dp"
        android:paddingStart="2dp"
        android:paddingEnd="4dp"
        android:layout_marginStart="4dp">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="5dp"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:id="@+id/tag_text_view"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"
            android:marqueeRepeatLimit="marquee_forever"/>
    </RelativeLayout>
</RelativeLayout>