<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/shape_rectangle_white_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp">
        <ImageView
            android:id="@+id/header_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="18sp"
            android:textColor="@color/black_333333"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:maxLines="2"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="14sp"
            android:textColor="@color/gray_666666"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:maxLines="4"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ok"
                android:background="@drawable/b_corners_ffffef3d_linear_ffffcc02_23"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <com.nebula.uikit.textview.RobotoBoldTextView
                    android:textSize="14dp"
                    android:textColor="@color/black_333333"
                    android:gravity="center"
                    android:id="@+id/btn_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="10dp"
                    android:textColor="@color/black_333333"
                    android:gravity="center"
                    android:id="@+id/btn_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
            <com.nebula.uikit.textview.RobotoBoldTextView
                android:textSize="14dp"
                android:textColor="#999999"
                android:gravity="center"
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/icon_white_close"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_centerHorizontal="true">
        <com.funny.yari.ui.widget.CircleImageView
            android:id="@+id/user_img"
            android:background="@drawable/bg_user_info_border"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:src="@drawable/user_profile_default_big"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>
        <com.nebula.uikit.svgaplayer.SVGAImageView
            android:id="@+id/header_move_icon"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_centerInParent="true"
            app:autoPlay="true"
            app:loopCount="-1"/>
    </RelativeLayout>
</RelativeLayout>