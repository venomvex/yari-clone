<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header_layout"
        layout="@layout/include_layout_header"/>
    <com.nebula.uikit.textview.RobotoRegularTextView
        android:textSize="14dp"
        android:textColor="@color/gray_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/yr_delete_account_tips"
        android:lineSpacingMultiplier="1.1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/delete_account_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="15dp"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:id="@+id/cancel_btn"
            android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="18dp"
            android:text="@string/yr_cancel"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/next_btn"
            android:background="@drawable/s_gray_999999_22_bg"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/yr_login_phone_next_bt"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
</LinearLayout>