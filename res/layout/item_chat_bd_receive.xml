<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/header_time_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:id="@+id/header_time_text"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/receive_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp">
                <com.funny.yari.ui.widget.RoundImageView
                    android:id="@+id/receive_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"/>
                <View
                    android:id="@+id/receive_empty_view"
                    android:visibility="gone"
                    android:layout_width="24dp"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/message_container"
                android:background="@drawable/shape_rectangle_white_8_bg"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_toStartOf="@+id/send_layout"
                android:layout_toEndOf="@+id/receive_layout">
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="13dp"
                    android:textColor="@color/gray_666666"
                    android:id="@+id/bd_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/bd_reward_img"
                    android:layout_width="match_parent"
                    android:layout_height="122dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@+id/bd_desc"
                    android:layout_centerHorizontal="true"/>
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="13dp"
                    android:textColor="@color/black_333333"
                    android:gravity="center"
                    android:id="@+id/bd_receive_btn"
                    android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/yr_receive"
                    android:layout_below="@+id/bd_reward_img"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="28dp"
                    android:paddingEnd="28dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/send_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_alignParentEnd="true">
                <com.funny.yari.ui.widget.RoundImageView
                    android:id="@+id/send_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentEnd="true"/>
                <View
                    android:id="@+id/send_empty_view"
                    android:visibility="gone"
                    android:layout_width="24dp"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>