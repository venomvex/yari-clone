<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/top_radius_white_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_black_back"
            android:layout_centerVertical="true"/>
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="17dp"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yr_cinema_play_list"
            android:layout_centerVertical="true"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="14dp"
            android:textColor="#ffffd502"
            android:id="@+id/paste_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_paste_link"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/cinema_play_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="14dp"
            android:textColor="@color/color_999999"
            android:id="@+id/cinema_play_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"/>
        <com.funny.yari.ui.widget.LoadMoreRecyclerView
            android:id="@+id/cinema_play_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/add_to_play_btn"
        android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/cinema_add_list_icon"
            android:layout_marginEnd="6dp"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_cinema_add_video_music"
            android:layout_marginStart="6dp"/>
    </LinearLayout>
    <com.funny.yari.ui.widget.CommonLoadingView
        android:id="@+id/loading_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <include
        android:id="@+id/empty_view"
        android:visibility="gone"
        layout="@layout/dialog_empty"/>
</RelativeLayout>