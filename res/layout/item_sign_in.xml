<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp">
        <RelativeLayout
            android:id="@+id/item_bg"
            android:background="@drawable/bg_sign_in_item"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/sign_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/coin_icon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/diamonds"
                            android:layout_marginStart="1dp"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/sign_layout_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/coin_icon_2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/diamonds"
                            android:layout_marginStart="1dp"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:id="@+id/name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/sign_layout_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon_3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/coin_icon_3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/diamonds"
                            android:layout_marginStart="1dp"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:id="@+id/name_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/sign_layout_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon_4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="fitCenter"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/coin_icon_4"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/diamonds"
                            android:layout_marginStart="1dp"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:id="@+id/name_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:id="@+id/sign_in_tag_text"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="@string/big_reward"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_alignStart="@+id/sign_in_tag"/>
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="12dp"
                    android:textColor="@color/black_333333"
                    android:gravity="center"
                    android:id="@+id/sign_in_tag"
                    android:background="@drawable/shape_rectangle_ffe601_6_4"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:text="1"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/selected_bg"
            android:background="@drawable/bg_sign_in_selected_item"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/confirm_btn"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sign_daily_confirm"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"/>
</RelativeLayout>