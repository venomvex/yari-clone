<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_close_54"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black_303133"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>
        <ImageView
            android:id="@+id/car_icon"
            android:visibility="visible"
            android:layout_width="118dp"
            android:layout_height="118dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/grey_616366"
            android:gravity="start|center_vertical"
            android:id="@+id/desc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:text=""
            android:layout_marginStart="51dp"
            android:layout_marginEnd="51dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/black_303133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yr_store_price"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff8536cd"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:drawableLeft="@drawable/ic_store_diamond_small"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_store_diamond_small"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/grey_9b9ca1"
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/ok"
            android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/grey_c2c4cb"
            android:gravity="center"
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:layout_marginStart="46dp"
            android:layout_marginEnd="46dp"/>
    </LinearLayout>
</RelativeLayout>