<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/close"
        android:padding="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dialog_close_54"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>
        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_marginBottom="4dp">
            <com.nebula.uikit.svgaplayer.SVGAImageView
                android:id="@+id/header_move_icon"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:autoPlay="true"
                app:loopCount="-1"/>
            <ImageView
                android:id="@+id/head_cover"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.funny.yari.ui.widget.CircleImageView
                android:id="@+id/head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <include layout="@layout/include_star_14dp_layout"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            android:id="@+id/time"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_store_clock_time"/>
        <TextView
            android:textSize="14dp"
            android:id="@+id/svip_desc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:drawablePadding="2dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/grey_616366"
            android:gravity="center"
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:text=""
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/ok"
            android:background="@drawable/shape_gradient_19cc9d_1bd9b3_23"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/yr_ok"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/grey_c2c4cb"
            android:gravity="center"
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text=""
            android:layout_marginStart="53dp"
            android:layout_marginEnd="53dp"/>
    </LinearLayout>
</RelativeLayout>