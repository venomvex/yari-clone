<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.nebula.uikit.textview.RobotoMediumTextView
        android:textSize="17dp"
        android:textColor="@color/live_room_bottom_edit_text_color"
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/yr_cinema_paste_music_video_link"/>
    <com.nebula.uikit.textview.RobotoRegularTextView
        android:textSize="14dp"
        android:gravity="center"
        android:id="@+id/top_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/yr_cinema_paste_tip"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/cinema_paste_dialog_img"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/pl_edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:weightSum="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <EditText
            android:textSize="13dp"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/sub_title_text_color"
            android:gravity="top"
            android:id="@+id/video_edit"
            android:background="@null"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/yr_cinema_enter_hint"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@drawable/edit_text_cursor_color"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp">
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="14dp"
            android:textColor="#999999"
            android:gravity="center"
            android:id="@+id/cancel_btn"
            android:background="@drawable/shape_line_cccccc_bg_23"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="@string/yr_cancel"
            android:layout_marginEnd="8dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/submit_btn"
            android:background="@drawable/shape_gradient_19cc9d_1bd9b3_23"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp">
            <com.nebula.uikit.textview.RobotoBoldTextView
                android:textSize="14dp"
                android:textColor="@color/black_333333"
                android:gravity="center"
                android:id="@+id/btn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/yr_confirm"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>