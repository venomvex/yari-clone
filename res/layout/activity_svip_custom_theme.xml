<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/back"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_black_back"
            android:scaleType="centerInside"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_custom_theme"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:background="@drawable/bg_svip_visitors"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_below="@+id/header_layout"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_layout">
        <ImageView
            android:id="@+id/upload_img"
            android:layout_width="177dp"
            android:layout_height="282dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/custom_theme_default"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/warning_text_layout"
            android:background="@drawable/shape_bg_ffdddd"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="11dp"
            android:paddingEnd="17dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_warning"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="13dp"
                android:textColor="@color/color_4a1f19"
                android:id="@+id/warning_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
        <View
            android:id="@+id/warning_divider"
            android:background="@drawable/custom_room_theme_divider"
            android:visibility="gone"
            android:layout_width="198dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="13dp"
            android:textColor="@color/black_333333"
            android:id="@+id/upload_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="15dp"
            android:id="@+id/modify_count"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="15dp"
            android:textColor="@color/color_7d540c"
            android:gravity="center"
            android:id="@+id/upload_btn"
            android:background="@drawable/bg_svip_limits_dialog_btn"
            android:layout_width="258dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</RelativeLayout>