<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/divider"
        android:background="@color/app_grey_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/top_bar"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/parent_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider">
        <TextView
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/app_black_303133"
            android:gravity="center"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:text="@string/yr_bind_phone_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <LinearLayout
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:id="@+id/phone_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="56dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/content"
            android:layoutDirection="ltr"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="30dp">
            <LinearLayout
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:id="@+id/area_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.funny.yari.ui.widget.RoundRectImageView
                    android:id="@+id/country_flag"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/app_black_de"
                    android:gravity="center"
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"/>
                <ImageView
                    android:id="@+id/flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_country_flag"
                    android:rotation="0"/>
            </LinearLayout>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/app_black_de"
                android:textColorHint="@color/app_grey_c2c4cb"
                android:gravity="center_vertical"
                android:id="@+id/country_hint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:hint="@string/yr_choose_area"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"/>
            <View
                android:background="@color/app_grey_c2c4cb"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <EditText
                android:textSize="20dp"
                android:textStyle="normal"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/app_grey_c2c4cb"
                android:layout_gravity="center_vertical"
                android:id="@+id/edit_phone_number"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/yr_login_phone_edit_hint"
                android:maxLength="10"
                android:digits="0123456789"
                android:layout_weight="1"
                android:inputType="phone"/>
            <ImageView
                android:id="@+id/clear_edit"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_clear"/>
        </LinearLayout>
        <View
            android:id="@+id/split_line"
            android:background="@color/appcolor_split_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_below="@+id/phone_number_layout"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/split_line">
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="16dp"
                android:textColor="#ff0000"
                android:id="@+id/area_numb_tips"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/split_line"
                android:layout_marginStart="30dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/phone_login_button"
                android:background="@drawable/bg_login_grey_next_selector"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="13dp"
                android:layout_below="@+id/split_line"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">
                <ImageView
                    android:id="@+id/ic_login_icon"
                    android:background="@drawable/ic_login_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="@color/black_333333"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:id="@+id/phone_login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yr_bind_with_phone"
                    android:maxLines="2"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/country_list"
            android:background="@drawable/s_gradient_white_raduis_bg"
            android:visibility="gone"
            android:layout_width="152dp"
            android:layout_height="200dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/split_line"
            android:overScrollMode="never"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/top_bar"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/back"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:text="@string/yr_bind_phone"
            android:singleLine="true"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/app_black_303133"
            android:gravity="center"
            android:id="@+id/review_report"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>