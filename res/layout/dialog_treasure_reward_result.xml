<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/reward_bg"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:layout_marginTop="132dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <ImageView
                android:id="@+id/air_play_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="3dp"/>
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yr_special_tab_reward"
                android:layout_marginStart="3dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/my_reward_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout">
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="12dp"
                android:textColor="@color/color_white_70"
                android:id="@+id/my_reward_title"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="8dp"
                android:text="@string/yr_you_ve_got_rewards_below"
                android:layout_centerHorizontal="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_reward_list"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="124dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/my_reward_title"
                android:layout_centerHorizontal="true"
                android:overScrollMode="never"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/empty_text"
                android:background="@drawable/my_reward_empty_bg"
                android:visibility="gone"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="8dp"
                android:text="@string/yr_better_luck_next_time"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/chaimed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_reward_container">
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/treasure_tips_circle"
                android:layout_marginEnd="3dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="12dp"
                android:textColor="@color/color_white_70"
                android:gravity="center"
                android:id="@+id/get_total_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/treasure_tips_circle"
                android:layout_marginStart="3dp"/>
        </LinearLayout>
        <com.funny.yari.ui.widget.LoadMoreRecyclerView
            android:id="@+id/room_reward_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/chaimed_layout"/>
        <include
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/dialog_loading"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="156dp"
        android:src="@drawable/treasure_dialog_close"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>