<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/header_time_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:id="@+id/header_time_text"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/receive"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/receive_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/receive_layout"
                android:layout_alignParentStart="true">
                <com.funny.yari.ui.widget.RoundImageView
                    android:id="@+id/receive_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/receive_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingStart="4dp"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/you_message"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="12dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/receive_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello"/>
                    <ImageView
                        android:id="@+id/receive_item_img"
                        android:layout_width="158dp"
                        android:layout_height="98dp"
                        android:layout_marginTop="9dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/send_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingEnd="4dp"
                android:layout_alignParentEnd="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/me_message"
                    android:paddingBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_alignParentEnd="true">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="12dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/send_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello"/>
                    <ImageView
                        android:id="@+id/send_item_img"
                        android:layout_width="158dp"
                        android:layout_height="98dp"
                        android:layout_marginTop="9dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/send_layout"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/send_layout"
                android:layout_alignParentEnd="true">
                <com.funny.yari.ui.widget.RoundImageView
                    android:id="@+id/send_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>