<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/rootView"
        android:background="@drawable/ic_popup_bg"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_delete"
            android:drawableTop="@drawable/ic_delete_pop"
            android:drawablePadding="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_undo"
            android:drawableTop="@drawable/ic_undo_pop"
            android:drawablePadding="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_copy"
            android:drawableTop="@drawable/ic_copy_pop"
            android:drawablePadding="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_report"
            android:drawableTop="@drawable/icon_report_white"
            android:drawablePadding="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
</RelativeLayout>