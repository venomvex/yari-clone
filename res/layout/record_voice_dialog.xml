<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/record_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/close_btn"
        android:padding="10dp"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/close_white"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:text="Record a Song"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="12dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/yr_record_tips_text"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/start_record"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/record_icon"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Click to record"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/recording_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/stop_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/record_stop"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="00:00"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/result_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="58dp">
            <RelativeLayout
                android:id="@+id/play_voice_btn"
                android:background="@drawable/voice_bg"
                android:layout_width="103dp"
                android:layout_height="30dp"
                android:layout_marginEnd="9dp">
                <ImageView
                    android:id="@+id/play_btn"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/play_anim_view"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@+id/play_btn"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@+id/play_btn"
                    app:lottie_repeatCount="-1"
                    app:lottie_repeatMode="restart"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/second_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0&apos;&apos;"
                    android:layout_toRightOf="@+id/play_anim_view"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/play_anim_view"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_btn"
                android:layout_marginStart="9dp"/>
        </LinearLayout>
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="16dp"
            android:textColor="#b32c03"
            android:gravity="center"
            android:id="@+id/start_upload"
            android:background="@drawable/record_cannot_commit"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="34dp"
            android:text="@string/yr_submit"/>
    </LinearLayout>
    <include
        android:id="@+id/uploading_view"
        android:visibility="gone"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        layout="@layout/dialog_loading"/>
</RelativeLayout>