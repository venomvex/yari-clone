<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/close"
        android:padding="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dialog_close_54"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>
        <RelativeLayout
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_marginBottom="4dp">
            <com.funny.yari.ui.widget.CircleImageView
                android:id="@+id/head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/head_cover"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.nebula.uikit.svgaplayer.SVGAImageView
                android:id="@+id/header_move_icon"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:autoPlay="true"
                app:loopCount="-1"/>
        </RelativeLayout>
        <include layout="@layout/include_star_14dp_layout"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"/>
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">
            <com.nebula.uikit.textview.RobotoBoldTextView
                android:textSize="17dp"
                android:textColor="@color/black_333333"
                android:gravity="center"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_money_icon"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/color_999999"
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/ok"
            android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:text=""
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/grey_c2c4cb"
            android:gravity="center"
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text=""
            android:layout_marginStart="53dp"
            android:layout_marginEnd="53dp"/>
    </LinearLayout>
</RelativeLayout>