<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <include
        android:id="@+id/music_choose_bar"
        layout="@layout/music_choose_actionbar"/>
    <include
        android:id="@+id/search_layout"
        android:visibility="gone"
        layout="@layout/music_search_header"/>
    <com.funny.yari.ui.widget.rtlviewpager.RtlViewPager
        android:id="@+id/music_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/voice_control_layout"
        android:background="@color/color_black_90"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:weightSum="1">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/music_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_music"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <SeekBar
            android:id="@+id/voice_progress"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="3.4dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/b_music_seek_bar"
            android:minHeight="3.4dp"
            android:thumb="@drawable/t_indicator_gift"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/music_text"
            android:layout_centerVertical="true"
            android:layout_marginStart="-3dp"
            android:layout_toEndOf="@+id/music_text"
            android:splitTrack="false"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="14dp"
            android:textColor="@color/sub_title_text_color"
            android:gravity="center"
            android:id="@+id/voice_volume"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="100"
            android:layout_toRightOf="@+id/voice_progress"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/voice_progress"/>
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/color_black_90"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/music_play_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/music_play_btn"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <RelativeLayout
            android:id="@+id/seek_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/music_play_btn"
            android:layout_toEndOf="@+id/music_play_btn">
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Music"
                android:layout_marginStart="12dp"/>
            <SeekBar
                android:id="@+id/music_progress"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="3.4dp"
                android:max="1000"
                android:progress="50"
                android:progressDrawable="@drawable/b_music_seek_bar"
                android:minHeight="3.4dp"
                android:thumb="@drawable/t_indicator_gift"
                android:layout_below="@+id/music_name"
                android:layout_marginStart="-3dp"
                android:splitTrack="false"/>
            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_below="@+id/music_progress"
                android:paddingEnd="16dp">
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="@color/sub_title_text_color"
                    android:id="@+id/timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="@color/sub_title_text_color"
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:30"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/voice_control"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/seek_layout"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/seek_layout">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/voice_volumn"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>