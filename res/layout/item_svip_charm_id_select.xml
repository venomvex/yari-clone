<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.nebula.uikit.textview.RobotoMediumTextView
        android:textSize="14dp"
        android:textColor="@color/color_828282"
        android:gravity="center"
        android:id="@+id/digit_number"
        android:background="@drawable/bg_svip_charm_id_unselected"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginTop="9dp"
        android:text="6 Digits"/>
    <ImageView
        android:id="@+id/svip_anim_view"
        android:layout_width="64dp"
        android:layout_height="22dp"/>
</RelativeLayout>