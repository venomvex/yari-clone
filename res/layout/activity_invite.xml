<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/header"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <ImageView
            android:id="@+id/back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_black_back"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentStart="true"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/appcolor_black"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/yr_contacts"
            android:singleLine="true"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp"/>
    </RelativeLayout>
    <View
        android:background="#ebeae6"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            app:tabBackground="@android:color/transparent"
            app:tabGravity="fill"
            app:tabIndicatorGravity="center"
            app:tabMode="fixed"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp"
            app:tabPaddingTop="8dp"
            app:tabRippleColor="@android:color/transparent"
            app:tabTextAppearance="@style/TabLayoutHomeTextStyle"
            app:tabTextColor="@color/tabpage_item_text_color_green"/>
        <View
            android:background="#ebeae6"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <com.funny.yari.ui.widget.rtlviewpager.RtlViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/search_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/search_header_with_btn"
            layout="@layout/person_search_header_with_btn"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_list"
            android:paddingTop="-24dp"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include
            android:id="@+id/search_empty_view"
            layout="@layout/empty_view"/>
    </LinearLayout>
</LinearLayout>