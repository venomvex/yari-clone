<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_black_90"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#cc000000"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nebula.uikit.textview.RobotoBoldTextView
                android:textSize="28dp"
                android:textColor="#ffffe501"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Congratulations"
                android:maxLines="4"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Upgrade to Lv.10"
                android:maxLines="4"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-40dp">
                <com.nebula.uikit.svgaplayer.SVGAImageView
                    android:id="@+id/back_img"
                    android:layout_width="360dp"
                    android:layout_height="360dp"
                    android:layout_centerInParent="true"
                    app:autoPlay="true"
                    app:loopCount="-1"/>
                <com.nebula.uikit.svgaplayer.SVGAImageView
                    android:id="@+id/font_img"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_centerInParent="true"
                    app:autoPlay="true"
                    app:loopCount="1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-40dp">
                <View
                    android:id="@+id/level_up_reward_bg_layout"
                    android:background="@drawable/level_up_bottom_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/level_up_reward_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/level_reward_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp">
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="7dp"
                            android:src="@drawable/level_title_left_icon"
                            android:layout_marginEnd="12dp"/>
                        <com.nebula.uikit.textview.RobotoMediumTextView
                            android:textColor="@color/white"
                            android:id="@+id/level_up_reward_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yr_obtaining_rewards"/>
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="7dp"
                            android:src="@drawable/level_title_right_icon"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reward_list"
                        android:layout_width="match_parent"
                        android:layout_height="109dp"
                        android:layout_marginTop="24dp"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textColor="@color/black_333333"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/check_btn"
                        android:background="@drawable/b_corners_ffffef3d_linear_ffffcc02_20"
                        android:layout_width="226dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:text="Check"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/close"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_close_game"
                    android:layout_below="@+id/level_up_reward_layout"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>