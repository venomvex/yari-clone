<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="11dp"
    android:paddingBottom="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/head_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp">
        <ImageView
            android:id="@+id/image_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/b_user_default"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/user_v"
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/user_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp">
        <TextView
            android:textSize="15dp"
            android:textColor="#ff333333"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/appcolor_gray"
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""/>
    </LinearLayout>
    <com.nebula.uikit.textview.RobotoMediumTextView
        android:textSize="13dp"
        android:textColor="#ff333333"
        android:gravity="center"
        android:id="@+id/block_btn"
        android:background="@drawable/b_corners_ffffef3d_linear_ffffcc02_15"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_margin="13dp"
        android:text="@string/yr_block_unblock"/>
</LinearLayout>