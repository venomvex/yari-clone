<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_close"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black_303133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_dialog_title_custom_exchange"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black_303133"
            android:id="@+id/diamond_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/yr_diamond_balance"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_diamond_item"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>
        <EditText
            android:textSize="12dp"
            android:textColor="@color/black_303133"
            android:textColorHint="#c2c4cb"
            android:id="@+id/edit_tv"
            android:background="@drawable/s_rectangle_f2f2f2_bg_24"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:hint="@string/yr_enter_number_diamonds"
            android:maxLength="12"
            android:digits="0123456789"
            android:drawablePadding="10dp"
            android:inputType="phone"
            android:drawableStart="@drawable/ic_diamond_item"
            android:textAlignment="viewStart"
            android:paddingStart="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="25dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/black_303133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_marginEnd="4dp"/>
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="16dp"
                android:textColor="@color/black_303133"
                android:id="@+id/energy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_energy_60"/>
        </LinearLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/ok"
            android:background="@drawable/s_rectangle_grey_c2c4cb_23"
            android:layout_width="226dp"
            android:layout_height="46dp"
            android:layout_marginBottom="20dp"
            android:text="@string/yr_btn_exchange"/>
    </LinearLayout>
</RelativeLayout>