<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="312dp"
            android:layout_height="435dp">
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/not_open_layout"
                android:visibility="visible"
                android:layout_width="283dp"
                android:layout_height="395dp"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/not_open_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <com.funny.yari.ui.widget.CircleImageView
                    android:id="@+id/send_user_avatar"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/user_profile_default_big"
                    android:layout_centerHorizontal="true"
                    app:strokeColor="#fff9e46d"
                    app:strokeWidth="2dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/send_user_avatar"
                    android:layout_centerHorizontal="true">
                    <com.nebula.uikit.textview.RobotoBoldTextView
                        android:textSize="20dp"
                        android:textColor="@color/color_ffed88"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:id="@+id/send_user_name"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="218dp"
                        android:layout_height="wrap_content"
                        android:text="Nick Name"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        android:marqueeRepeatLimit="marquee_forever"/>
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="17dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/yr_sent_you_a_lucky_bag"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/btn_layout"
                    android:layout_width="183dp"
                    android:layout_height="183dp"
                    android:layout_below="@+id/text_layout"
                    android:layout_centerHorizontal="true">
                    <com.nebula.uikit.svgaplayer.SVGAImageView
                        android:id="@+id/red_bag_open_btn"
                        android:layout_width="183dp"
                        android:layout_height="183dp"
                        android:src="@drawable/red_bag_not_open_btn"/>
                    <com.nebula.livevoice.ui.view.gameview.redbag.StrokeRobotoBlackItalicTextView
                        android:textSize="44dp"
                        android:textColor="#ff897a75"
                        android:id="@+id/red_bag_count_down_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/open_layout"
                android:visibility="gone"
                android:layout_width="325dp"
                android:layout_height="436dp"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/open_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/have_reward_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/detail_ll"
                    android:layout_centerHorizontal="true">
                    <com.nebula.uikit.textview.RobotoBoldTextView
                        android:textSize="20dp"
                        android:textColor="#642626"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yr_you_got"/>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:background="@drawable/shape_gradient_ffe596_ffe69d_11_bg"
                        android:layout_width="176dp"
                        android:layout_height="158dp"
                        android:layout_marginTop="14dp">
                        <com.nebula.uikit.textview.RobotoMediumTextView
                            android:textSize="11dp"
                            android:textColor="#ffffef85"
                            android:gravity="center"
                            android:id="@+id/lucky_draw_tag"
                            android:background="@drawable/red_bag_luckydraw_bg"
                            android:layout_width="109dp"
                            android:layout_height="18dp"
                            android:text="@string/yr_luckiest_draw"/>
                        <ImageView
                            android:id="@+id/red_bag_reward"
                            android:layout_width="132dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/red_bag_coin_icon"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/diamonds"/>
                            <com.nebula.uikit.textview.RobotoMediumTextView
                                android:textSize="16dp"
                                android:textColor="#ffdb1212"
                                android:id="@+id/red_bag_reward_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/have_no_reward_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_above="@+id/detail_ll"
                    android:layout_centerHorizontal="true">
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="18dp"
                        android:textColor="@color/color_642626"
                        android:gravity="center"
                        android:id="@+id/no_reward_result"
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        android:text="@string/yr_lucky_bags_were_snatched_up"/>
                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_marginTop="31dp"
                        android:src="@drawable/ic_no_reward"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/detail_ll"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_alignParentBottom="true">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/bottom_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="28dp"
                        android:text="@string/yr_check_the_details"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </RelativeLayout>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="13dp"
                android:textColor="@color/white"
                android:id="@+id/remain_time"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="38dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/close_btn"
            android:background="@drawable/red_bag_close_btn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>