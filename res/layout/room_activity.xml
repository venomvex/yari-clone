            android:orientation="vertical"
            android:id="@+id/player_container"
            android:background="@color/color_black_80"
            android:visibility="invisible"
            android:layout_width="264dp"
            android:layout_height="78dp"
            android:layout_marginTop="12dp"
            android:weightSum="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/stop_music"
                    android:paddingTop="13dp"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/close_music"
                    android:paddingStart="13dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/music_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text=""
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/retract"
                    android:paddingTop="13dp"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/retract_music"
                    android:paddingEnd="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:paddingTop="13dp"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/voice_music"
                    android:paddingStart="13dp"/>
                <SeekBar
                    android:id="@+id/voice_progress"
                    android:paddingBottom="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:maxHeight="3.4dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/bg_music_seek_bar"
                    android:minHeight="3.4dp"
                    android:thumb="@drawable/yellow_indicator"
                    android:layout_weight="1"
                    android:layout_marginStart="-3dp"
                    android:splitTrack="false"/>
                <ImageView
                    android:id="@+id/play_parse_btn"
                    android:paddingTop="13dp"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/play_music"
                    android:scaleType="centerCrop"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                <ImageView
                    android:id="@+id/next_btn"
                    android:paddingTop="13dp"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/next_music"
                    android:scaleType="centerCrop"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                <ImageView
                    android:id="@+id/enter_music_center"
                    android:paddingTop="13dp"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/enter_music_list"
                    android:scaleType="centerCrop"
                    android:paddingStart="6.5dp"
                    android:paddingEnd="6.5dp"
                    android:layout_marginEnd="6.5dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/music_anim_view"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="music.json"
            app:lottie_repeatCount="-1"
            app:lottie_repeatMode="restart"/>
