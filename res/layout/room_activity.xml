            android:layout_above="@+id/dtr_divider_v"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/diamond_big"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/lucky_gift_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.nebula.uikit.svgaplayer.SVGAImageView
        android:id="@+id/activity_anim"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="true"
        app:clearsAfterStop="true"
        app:loopCount="1"/>
    <com.nebula.uikit.animplayer.AnimView
        android:id="@+id/treasure_anim_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="true"
        app:clearsAfterStop="true"
        app:loopCount="1"/>
    <com.nebula.uikit.svgaplayer.SVGAImageView
        android:id="@+id/red_pack_anim_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="true"
        app:clearsAfterStop="true"
        app:loopCount="1"/>
    <com.nebula.uikit.svgaplayer.SVGAImageView
        android:id="@+id/amazing_gift_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
