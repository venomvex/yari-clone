            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/gift_inner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:behavior_hideable="true"
                app:behavior_peekHeight="0dp"
                app:layout_behavior="@string/bottom_sheet_no_drag_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <include
            android:visibility="gone"
            layout="@layout/live_room_music_indicator_view"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/music_player_container"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/pager_contaner">
