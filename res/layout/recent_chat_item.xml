<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/container"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/selected"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            style="@style/checkBoxStyle"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp">
            <com.funny.yari.ui.widget.RoundImageView
                android:id="@+id/img"
                android:padding="0dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"/>
            <View
                android:id="@+id/online_tag"
                android:background="@drawable/bg_im_online"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:paddingEnd="20dp">
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="15.94dp"
                    android:textColor="@color/black_303133"
                    android:gravity="start"
                    android:layout_gravity="bottom"
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:singleLine="true"
                    android:layout_weight="0.7"
                    android:textAlignment="viewStart"/>
                <TextView
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_gravity="bottom"
                    android:id="@+id/message_time"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="0.3"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="11.96dp"
                    android:textColor="@color/message_subtitle_color"
                    android:gravity="start"
                    android:layout_gravity="top"
                    android:id="@+id/subTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="2"
                    android:singleLine="true"
                    android:layout_weight="0.92"
                    android:textAlignment="viewStart"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:id="@+id/message_count"
                    android:background="@drawable/bg_message_count"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.08"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="#1a000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>