<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header_layout"
        layout="@layout/include_layout_header"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="14dp"
                android:textColor="@color/gray_666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/yr_if_you_delete_your_account"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/yr_delete_confirm_top"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/s_rectangle_f2f5f4_bg_8"
                android:paddingBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                    <ImageView
                        android:id="@+id/coin_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/diamonds"
                        android:layout_marginStart="12dp"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/coin_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yr_recharge_diamonds"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toStartOf="@+id/own_coin"
                        android:layout_toEndOf="@+id/coin_icon"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/own_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/coin_divider"/>
                    <View
                        android:id="@+id/coin_divider"
                        android:background="@color/color_d3d3d3"
                        android:layout_width="17dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/end_coin"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/color_e24545"
                        android:id="@+id/end_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                    <ImageView
                        android:id="@+id/diamond_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/bean"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/diamond_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yr_recharge_by_beans"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toStartOf="@+id/own_diamond"
                        android:layout_toEndOf="@+id/diamond_icon"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/own_diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/diamond_divider"/>
                    <View
                        android:id="@+id/diamond_divider"
                        android:background="@color/color_d3d3d3"
                        android:layout_width="17dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/end_diamond"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/color_e24545"
                        android:id="@+id/end_diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                    <ImageView
                        android:id="@+id/follower_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_follower"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/follower_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yr_invite_followers"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toStartOf="@+id/own_follower"
                        android:layout_toEndOf="@+id/follower_icon"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/black_333333"
                        android:id="@+id/own_follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/follower_divider"/>
                    <View
                        android:id="@+id/follower_divider"
                        android:background="@color/color_d3d3d3"
                        android:layout_width="17dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/end_follower"/>
                    <com.nebula.uikit.textview.RobotoMediumTextView
                        android:textSize="14dp"
                        android:textColor="@color/color_e24545"
                        android:id="@+id/end_follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/yr_delete_confirm_bottom"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:id="@+id/confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="15dp"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:id="@+id/cancel_btn"
            android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="18dp"
            android:text="@string/yr_cancel"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="15dp"
            android:textColor="#ffe24545"
            android:gravity="center"
            android:id="@+id/next_btn"
            android:background="@drawable/s_line_cccccc_bg_22"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/yr_delete_account"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
</LinearLayout>