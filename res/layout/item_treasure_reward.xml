<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="94dp"
    android:layout_height="126dp">
    <ImageView
        android:id="@+id/treasure_reward_icon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="18dp"/>
    <include
        android:id="@+id/star_layout"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/treasure_reward_icon"
        android:layout_centerHorizontal="true"
        layout="@layout/include_star_10dp_layout"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/star_layout"
        android:autoMirrored="true">
        <ImageView
            android:id="@+id/diamond_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:maxLines="1"
            android:layout_marginStart="3dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/tag_view"
        android:layout_width="77dp"
        android:layout_height="21dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:autoMirrored="true">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="11dp"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:id="@+id/tag_text_view"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"
            android:marqueeRepeatLimit="marquee_forever"/>
    </RelativeLayout>
</RelativeLayout>