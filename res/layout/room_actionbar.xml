<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="6dp"
    android:layout_alignParentTop="true">
    <RelativeLayout
        android:background="@drawable/b_live_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/room_container"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp">
            <com.funny.yari.ui.widget.RoundRectImageView
                android:id="@+id/room_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                app:cornerRadius="4dp"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/lock_icon"
                android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_room_lock"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/room_action_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="15dp"
            android:layout_toEndOf="@+id/room_container">
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:textColor="@color/colorWhite"
                android:ellipsize="marquee"
                android:gravity="start|center_vertical"
                android:id="@+id/room_name_text"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:textAlignment="viewStart"
                android:layout_marginStart="7dp"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="7dp">
                <com.funny.yari.ui.widget.CharmItemView
                    android:id="@+id/id_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:yariIdColor="#ffcccccc"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="#ffcccccc"
                    android:layout_gravity="center"
                    android:id="@+id/online_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/online_icon"
                    android:layout_marginStart="7dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/top_contribute_btn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/contribution_top_icon"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"/>
        <ImageView
            android:id="@+id/more"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/room_settings"
            android:scaleType="fitCenter"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/share_icon"
            android:scaleType="fitCenter"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"/>
        <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/room_exit"
            android:scaleType="fitCenter"
            android:paddingStart="8dp"
            android:paddingEnd="12dp"/>
    </LinearLayout>
</RelativeLayout>