<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/time"
            android:background="@drawable/bg_message_time"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:text="2020/12/02"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/shape_rectangle_white_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <com.nebula.uikit.textview.RobotoBoldTextView
                android:textSize="16dp"
                android:textColor="@color/black_303133"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/yr_bind_success"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:textColor="@color/black_303133"
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/shape_rectangle_fafbfc_bg"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_marginTop="14dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/bg_relation_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.funny.yari.ui.widget.RoundImageView
                            android:id="@+id/left_header"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="4dp"/>
                        <com.nebula.uikit.textview.RobotoMediumTextView
                            android:textSize="14dp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/left_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="user left"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/icon_relation_success"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.funny.yari.ui.widget.RoundImageView
                            android:id="@+id/right_header"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="4dp"/>
                        <com.nebula.uikit.textview.RobotoMediumTextView
                            android:textSize="14dp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/right_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="user right"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/about_btn"
                android:background="@drawable/shape_rectangle_ffc000_bg_20"
                android:layout_width="144dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/yr_about_us"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>