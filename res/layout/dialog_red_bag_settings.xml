<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <View
        android:id="@+id/help_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_layout"/>
    <RelativeLayout
        android:id="@+id/main_layout"
        android:background="@drawable/red_pag_settings_bg"
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:layout_alignParentBottom="true">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="13dp"
            android:textColor="#fffffed3"
            android:gravity="center"
            android:id="@+id/record_btn"
            android:background="@drawable/redbag_record_bg"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="112dp"
            android:text="@string/yr_record_end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="12dp"/>
        <ImageView
            android:id="@+id/info"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/icon_info_white"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/color_fffb95"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:layout_marginBottom="20dp"
            android:text="@string/yr_lucky_bag"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:layout_marginTop="148dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="13dp"
                    android:textColor="#ff54200f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yr_coins"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/coin_list"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp">
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="13dp"
                    android:textColor="#ff54200f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yr_quantity"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/quantity_list"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="19dp"
            android:textColor="#fffffed3"
            android:gravity="center"
            android:id="@+id/ok"
            android:background="@drawable/redpag_btn"
            android:layout_width="298dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:text="@string/yr_send_button"
            android:layout_above="@+id/coin_layout"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/coin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/diamonds"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="15dp"
                android:textColor="@color/black_333333"
                android:id="@+id/current_diamonds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <View
                android:background="#ffefddc4"
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="15dp"
                android:textColor="#ffff4430"
                android:id="@+id/recharge_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yr_recharge_end"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>