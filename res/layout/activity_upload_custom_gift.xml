<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff1e1e23"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/action_bar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/back"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_white"
            android:scaleType="centerInside"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"/>
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/yr_upload_customized_gift"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/info"
            android:paddingLeft="9dp"
            android:paddingTop="16dp"
            android:paddingRight="15dp"
            android:paddingBottom="16dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_info"
            android:paddingStart="9dp"
            android:paddingEnd="15dp"/>
    </LinearLayout>
    <ImageView
        android:background="@drawable/uploadgif_bg"
        android:layout_width="match_parent"
        android:layout_height="553dp"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="120dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/re_upload_top_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp">
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="15dp"
                    android:textColor="#ffffe601"
                    android:id="@+id/re_upload_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Dear"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="15dp"
                    android:textColor="@color/color_white_80"
                    android:id="@+id/re_upload_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="We regret to inform you that your customized gift rose was not pass review."/>
            </LinearLayout>
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="15dp"
                android:textColor="#ffffe601"
                android:id="@+id/gift_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/yr_gift_name"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/gift_name_enter_layout"
                android:background="@drawable/bg_edit_custom_gift_name_text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:weightSum="1"
                android:paddingStart="20dp">
                <EditText
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/color_white_40"
                    android:id="@+id/custom_gift_name_text"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/yr_please_enter"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:layout_weight="0.82"
                    android:textCursorDrawable="@drawable/edit_text_cursor_color"
                    android:paddingEnd="4dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="14dp"
                    android:textColor="@color/color_white_40"
                    android:gravity="center"
                    android:id="@+id/count_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0/10"
                    android:layout_weight="0.18"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/re_upload_name_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="15dp"
                    android:textColor="@color/color_white_80"
                    android:id="@+id/re_upload_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="15dp"
                    android:textColor="#ff7936"
                    android:id="@+id/re_upload_gift_name_tip"
                    android:background="@drawable/bg_re_upload_gift_tip"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="15dp"
                android:textColor="#ffffe601"
                android:id="@+id/gift_img_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/yr_gift_picture"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/gift_img_layout"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="9dp">
                <ImageView
                    android:id="@+id/custom_gift_icon_upload_btn"
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:src="@drawable/custom_gif_upload_icon"
                    android:layout_centerInParent="true"/>
                <View
                    android:id="@+id/reset_icon_btn"
                    android:background="@drawable/ic_close_big"
                    android:visibility="gone"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="15dp"
                android:textColor="#ff7936"
                android:id="@+id/re_upload_gift_img_tip"
                android:background="@drawable/bg_re_upload_gift_tip"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:id="@+id/upload_gift_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/yr_upload_gift_picture"/>
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="15dp"
                android:textColor="#ffffe601"
                android:id="@+id/gift_mp4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="@string/yr_gift_mp4"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="13dp"
                android:textColor="@color/color_white_80"
                android:id="@+id/gift_mp4_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/yr_upload_mp4_tip"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:id="@+id/gift_mp4_layout"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/custom_gift_mp4_upload_btn"
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:src="@drawable/custom_gif_upload_icon"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/play_btn"
                    android:visibility="gone"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/custom_gift_play_btn"
                    android:layout_centerInParent="true"/>
                <View
                    android:id="@+id/reset_res_btn"
                    android:background="@drawable/ic_close_big"
                    android:visibility="gone"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="15dp"
                android:textColor="#ff7936"
                android:id="@+id/re_upload_gift_mp4_tip"
                android:background="@drawable/bg_re_upload_gift_tip"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:id="@+id/upload_gift_mp4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/yr_upload_gift_mp4"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.nebula.uikit.textview.RobotoMediumTextView
        android:textSize="15dp"
        android:textColor="@color/black_333333"
        android:gravity="center"
        android:id="@+id/custom_gift_upload_btn"
        android:background="@drawable/shape_gradient_19cc9d_1bd9b3_23"
        android:layout_width="272dp"
        android:layout_height="44dp"
        android:layout_marginBottom="24dp"
        android:text="@string/yr_upload_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/video_player_layout"
        android:background="@android:color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/video_back"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_white"
            android:scaleType="centerInside"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/upload_process_layout"
        android:background="@color/color_black_70"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.funny.yari.ui.widget.CommonProcessView
            android:id="@+id/upload_process_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <include
        android:id="@+id/loading_view"
        android:visibility="gone"
        layout="@layout/loading_view"/>
</RelativeLayout>