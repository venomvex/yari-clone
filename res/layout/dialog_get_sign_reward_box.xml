<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nebula.uikit.svgaplayer.SVGAImageView
        android:id="@+id/reward_star_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:autoPlay="true"
        app:loopCount="-1"/>
    <com.nebula.uikit.svgaplayer.SVGAImageView
        android:id="@+id/reward_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:clearsAfterStop="false"
        app:loopCount="1"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/reward_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:background="@drawable/bg_get_reward_item"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <ImageView
                        android:id="@+id/rewardIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/coinIcon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/diamonds"
                        android:layout_marginStart="1dp"/>
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="15dp"
                        android:textColor="#fffaffc9"
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layout_2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:background="@drawable/bg_get_reward_item"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <ImageView
                        android:id="@+id/rewardIcon2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="15dp"
                        android:textColor="#fffaffc9"
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/coinIcon2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/diamonds"
                        android:layout_marginStart="1dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layout_3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:background="@drawable/bg_get_reward_item"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <ImageView
                        android:id="@+id/rewardIcon3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="15dp"
                        android:textColor="#fffaffc9"
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/coinIcon3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/diamonds"
                        android:layout_marginStart="1dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/bottom_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layout_4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:background="@drawable/bg_get_reward_item"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <ImageView
                        android:id="@+id/rewardIcon4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="15dp"
                        android:textColor="#fffaffc9"
                        android:id="@+id/name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/coinIcon4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/diamonds"
                        android:layout_marginStart="1dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layout_5"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:background="@drawable/bg_get_reward_item"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <ImageView
                        android:id="@+id/rewardIcon5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="15dp"
                        android:textColor="#fffaffc9"
                        android:id="@+id/name5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/coinIcon5"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/diamonds"
                        android:layout_marginStart="1dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layout_6"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <LinearLayout
                    android:background="@drawable/bg_get_reward_item"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <ImageView
                        android:id="@+id/rewardIcon6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <com.nebula.uikit.textview.RobotoRegularTextView
                        android:textSize="15dp"
                        android:textColor="#fffaffc9"
                        android:id="@+id/name6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/coinIcon6"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/diamonds"
                        android:layout_marginStart="1dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="17dp"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:id="@+id/okBtn"
            android:background="@drawable/reward_ok_bg"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:text="@string/yr_ok"/>
    </LinearLayout>
</RelativeLayout>