<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/global_help_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider3"/>
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/main_display"/>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/divider1"/>
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider2"/>
    <RelativeLayout
        android:id="@+id/main_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/top_click_helper"
            android:layout_width="match_parent"
            android:layout_height="95dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/card_bg"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <View
                android:background="@color/colorTransparent"
                android:layout_width="match_parent"
                android:layout_height="99dp"/>
            <View
                android:id="@+id/no_card_bg_view"
                android:background="@drawable/t_radius_white_bg"
                android:layout_width="match_parent"
                android:layout_height="201dp"/>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_click_helper">
            <View
                android:id="@+id/header_help_view"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/header_help_view">
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:gravity="end|center_vertical"
                    android:id="@+id/new_user_tag"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@+id/user_name_text"/>
                <com.nebula.uikit.textview.NenoRobotoRegularTextView
                    android:textSize="18dp"
                    android:textColor="@color/black_333333"
                    android:ellipsize="end"
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="10dp"
                    android:textColor="@color/black_303133"
                    android:id="@+id/sex_text"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="24"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_profile_male"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/user_name_text"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/user_sub_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/user_info">
                <ImageView
                    android:id="@+id/group_icon"
                    android:visibility="visible"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <ImageView
                    android:id="@+id/seller_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/svip_anim_view"
                    android:visibility="gone"
                    android:layout_width="64dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="4dp"/>
                <com.funny.yari.ui.widget.LevelItemView
                    android:id="@+id/level_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/member_text"
                    android:background="@drawable/b_group_member"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="@string/yr_member"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="4dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/manager_text"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="4dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/bd_text"
                    android:background="@drawable/bd_tag"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/family_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/user_sub_info"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp">
                <com.funny.yari.ui.widget.FamilyTagItemView
                    android:id="@+id/family_name_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    app:familyTagHeight="22dp"
                    app:familyTagTextSize="11"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/badge_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/family_layout">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/badge_list"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
            </LinearLayout>
            <View
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_person_info"
                android:layout_alignBottom="@+id/bottom_layout"/>
            <ImageView
                android:id="@+id/svip_bottom_tag"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@+id/bottom_layout"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/user_person_info"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/badge_container">
                <com.funny.yari.ui.widget.CharmItemView
                    android:id="@+id/id_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:canCopy="false"
                    app:charmIdBg="@null"
                    app:idTextSize="12"
                    app:yariIdColor="@color/color_999999"/>
                <View
                    android:background="@color/color_cccccc"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="@color/sub_title_text_color"
                    android:id="@+id/follower_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="148 Followers"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_person_info">
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="@color/sub_title_text_color"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/desc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/profile_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/user_profile_icon"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yr_user_info_profile"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/chat_btn"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/user_chat_icon"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yr_chat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/mute_person_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/mute_person_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/mute_person_icon"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:gravity="center"
                            android:id="@+id/mute_person_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yr_mute_mic"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/mention_person_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/mention_icon"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yr_mention"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/leave_btn"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/leave_mic"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="12dp"
                            android:textColor="@color/black_333333"
                            android:gravity="center"
                            android:id="@+id/leave_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/ud_line"
                    android:background="@color/line_color"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/manager_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/lock_user_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/lock_icon"/>
                            <com.nebula.uikit.textview.RobotoRegularTextView
                                android:textSize="12dp"
                                android:textColor="@color/black_333333"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/yr_lock"
                                android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/kick_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/kick"/>
                            <com.nebula.uikit.textview.RobotoRegularTextView
                                android:textSize="12dp"
                                android:textColor="@color/black_333333"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/yr_kick"
                                android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/ban_chat_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/ban_chat_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ban_chat"/>
                            <com.nebula.uikit.textview.RobotoRegularTextView
                                android:textSize="12dp"
                                android:textColor="@color/black_333333"
                                android:gravity="center"
                                android:id="@+id/ban_chat_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/yr_ban_chat"
                                android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/invite_btn"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/invite_icon"/>
                            <com.nebula.uikit.textview.RobotoRegularTextView
                                android:textSize="12dp"
                                android:textColor="@color/black_333333"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/yr_invite"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/set_manager_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/admin_controller_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/icon_admin"/>
                            <com.nebula.uikit.textview.RobotoRegularTextView
                                android:textSize="12dp"
                                android:textColor="@color/black_333333"
                                android:gravity="center"
                                android:id="@+id/admin_controller_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/yr_set_admin"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="31dp">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/remove_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/remove"/>
                            <com.nebula.uikit.textview.RobotoRegularTextView
                                android:textSize="12dp"
                                android:textColor="@color/black_333333"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/yr_listen"
                                android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/mute_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/mute_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/mic_mute"/>
                            <com.nebula.uikit.textview.RobotoRegularTextView
                                android:textSize="12dp"
                                android:textColor="@color/black_333333"
                                android:gravity="center"
                                android:id="@+id/mute_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/yr_mute"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/follow_and_send_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/follow_btn"
                        android:background="@drawable/b_corners_fffecc35_1_23"
                        android:layout_width="148dp"
                        android:layout_height="42dp"
                        android:layout_marginEnd="10dp">
                        <ImageView
                            android:id="@+id/follow_btn_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/follow_btn_icon"
                            android:layout_marginEnd="3dp"/>
                        <com.nebula.uikit.textview.RobotoRegularTextView
                            android:textSize="14dp"
                            android:textColor="#fffecc35"
                            android:gravity="center"
                            android:id="@+id/follow_btn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/send_gift_btn"
                        android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
                        android:layout_width="148dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="10dp">
                        <ImageView
                            android:id="@+id/send_gift_btn_icon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/send_gift_btn_icon"
                            android:layout_marginEnd="4dp"/>
                        <com.nebula.uikit.textview.RobotoMediumTextView
                            android:textSize="14dp"
                            android:textColor="#ff333333"
                            android:gravity="center"
                            android:id="@+id/send_gift_btn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yr_send_gifts"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textColor="@color/colorBlack"
                android:id="@+id/report_mute_tip"
                android:background="@drawable/ic_teen_guide_entrance"
                android:paddingBottom="16dp"
                android:visibility="gone"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:text="@string/yr_report_mute_tip"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="90dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="12dp"
            android:textColor="@color/sub_title_text_color"
            android:id="@+id/report_btn"
            android:background="@drawable/icon_report_black"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/top_click_helper"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/indicator"
                android:background="@drawable/user_info_frame_bg"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true">
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="12dp"
                    android:textColor="#4a3225"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yr_get_same_frame"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/go_icon"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="118dp"
                android:layout_height="118dp">
                <RelativeLayout
                    android:background="@drawable/bg_user_info_border"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_centerInParent="true">
                    <com.funny.yari.ui.widget.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/user_profile_default_big"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/header_icon"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"/>
                <com.nebula.uikit.svgaplayer.SVGAImageView
                    android:id="@+id/header_move_icon"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_centerInParent="true"
                    app:autoPlay="true"
                    app:loopCount="-1"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/toEndHeaderIcon"
            android:layout_width="19dp"
            android:layout_height="1px"
            android:layout_marginTop="80dp"
            android:layout_alignEnd="@+id/header_layout"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/relation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_alignStart="@+id/toEndHeaderIcon">
            <com.nebula.uikit.svgaplayer.SVGAImageView
                android:id="@+id/connect_img"
                android:layout_width="46dp"
                android:layout_height="46dp"/>
            <RelativeLayout
                android:background="@drawable/bg_user_info_border"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <com.funny.yari.ui.widget.CircleImageView
                    android:id="@+id/relation_avatar"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/user_profile_default_big"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>