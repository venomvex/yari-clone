<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/container"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp">
            <com.funny.yari.ui.widget.RoundImageView
                android:id="@+id/img"
                android:padding="0dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"/>
            <View
                android:id="@+id/online_tag"
                android:background="@drawable/bg_im_online"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp">
            <com.nebula.uikit.textview.RobotoMediumTextView
                android:textSize="16dp"
                android:textColor="@color/app_black_303133"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yari"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="12dp"
                android:textColor="@color/app_grey_616366"
                android:id="@+id/followState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="follow"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="10dp"
                android:textColor="@color/color_19cc9d"
                android:id="@+id/onLineState"
                android:background="@drawable/shape_bg_fff5e3"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Playing ludo"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="16dp">
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="16dp"
                android:textColor="@color/black_333333"
                android:gravity="center"
                android:id="@+id/inviteBtn"
                android:background="@drawable/shape_gradient_19cc9d_1bd9b3_23"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:text="Invite"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="#1a000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>