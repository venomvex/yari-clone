<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="12dp"
        android:textColor="#555452"
        android:gravity="start|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="old device id:"
        android:paddingStart="27dp"/>
    <TextView
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:textColor="#555452"
        android:gravity="start|center_vertical"
        android:id="@+id/old_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="xxxxxxxxxxxxxxxxxxx"
        android:paddingStart="27dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#555452"
        android:gravity="start|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="new device id:"
        android:paddingStart="27dp"/>
    <TextView
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:textColor="#555452"
        android:gravity="start|center_vertical"
        android:id="@+id/new_device_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="xxxxxxxxxxxxxxxxxxx"
        android:paddingStart="27dp"/>
    <View
        android:background="#ebeae6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#555452"
            android:gravity="center"
            android:id="@+id/apply_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Apply New"
            android:layout_weight="1"/>
        <View
            android:background="#ebeae6"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#555452"
            android:gravity="center"
            android:id="@+id/restore_old"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Restore Old"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>