<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <com.funny.yari.ui.widget.CircleImageView
            android:id="@+id/user_icon"
            android:background="@drawable/b_border"
            android:visibility="visible"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_toEndOf="@+id/user_icon">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/role_tag"
                    android:background="@drawable/b_user_owner"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1.5dp"
                    android:text="@string/yr_owner"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginEnd="4dp"/>
                <com.nebula.uikit.textview.RobotoRegularTextView
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:gravity="end|center_vertical"
                    android:id="@+id/new_user_tag"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="4dp"/>
                <ImageView
                    android:id="@+id/noble_icon"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"/>
                <com.nebula.uikit.textview.NenoRobotoRegularTextView
                    android:textSize="14dp"
                    android:textColor="#87868a"
                    android:ellipsize="end"
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
            </LinearLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:orientation="horizontal"
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_container"
                android:layout_marginEnd="10dp"
                app:alignContent="stretch"
                app:alignItems="center"
                app:flexWrap="wrap">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/family_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <com.funny.yari.ui.widget.FamilyTagItemView
                        android:id="@+id/family_name_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        app:familyTagHeight="18dp"
                        app:familyTagTextSize="9"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/seller_flag"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_user_seller"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="4dp"/>
                <com.funny.yari.ui.widget.LevelItemView
                    android:id="@+id/level"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"/>
                <RelativeLayout
                    android:id="@+id/first_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/first_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/first_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/second_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/second_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/second_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/third_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/third_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/third_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fourth_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/fourth_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/fourth_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fifth_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/fifth_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/fifth_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sixth_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/sixth_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/sixth_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/seventh_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/seventh_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/seventh_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/eighth_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/eighth_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/eighth_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ninth_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/ninth_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/ninth_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tenth_badge_layout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp">
                    <ImageView
                        android:id="@+id/tenth_badge_icon"
                        android:visibility="visible"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/tenth_level_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/group_icon"
                    android:visibility="gone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="4dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/svip_anim_view"
                    android:visibility="gone"
                    android:layout_width="64dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"/>
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/manager_text"
                    android:background="@drawable/b_user_owner"
                    android:paddingBottom="2dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Owner"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginEnd="4dp"/>
            </com.google.android.flexbox.FlexboxLayout>
            <RelativeLayout
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:layout_below="@+id/top_bar">
                <com.funny.yari.ui.widget.RoundRectImageView
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="start|center_vertical"
                    android:id="@+id/chat_img"
                    android:layout_width="148dp"
                    android:layout_height="148dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:textAlignment="viewStart"/>
                <RelativeLayout
                    android:id="@+id/loading_cover"
                    android:background="@color/color_black_60"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        style="?android:attr/progressBarStyle"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>