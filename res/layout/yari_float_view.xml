<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/living_v"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">
    <LinearLayout
        android:layout_gravity="end"
        android:id="@+id/k_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/r_cl"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="12dp">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"
                android:id="@+id/lottie_user_living"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="ul.json"
                app:lottie_imageAssetsFolder="images"
                app:lottie_repeatCount="-1"
                app:lottie_repeatMode="restart"/>
            <com.funny.yari.ui.widget.CircleImageView
                android:id="@+id/keep_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/user_profile_default_big"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.airbnb.lottie.LottieAnimationView
                android:textSize="10dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/lottie_user_living_bottom"
                android:paddingBottom="0dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="-6dp"
                android:singleLine="true"
                app:layout_constraintBottom_toBottomOf="@+id/keep_head"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="ulb.json"
                app:lottie_imageAssetsFolder="images"
                app:lottie_repeatCount="-1"
                app:lottie_repeatMode="restart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/live_list_layout"
        android:background="@drawable/s_room_living_bg"
        android:visibility="gone"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layoutDirection="ltr"
        android:elevation="3dp">
        <com.funny.yari.ui.widget.CircleImageView
            android:id="@+id/head_user_profile_default_big"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/user_profile_default_big"
            android:scaleType="centerCrop"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="4dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/follow_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#fe8b59"
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yr_on_live"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>