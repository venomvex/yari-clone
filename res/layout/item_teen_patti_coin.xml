<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="10.5sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/coin_img"
            android:background="@drawable/teen_patti_coin_first"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <View
            android:id="@+id/coin_selection"
            android:background="@drawable/bg_teen_patti_selection"
            android:visibility="gone"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/coin_count"
            android:background="@drawable/bg_game_count"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>