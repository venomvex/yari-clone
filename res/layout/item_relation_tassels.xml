<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <LinearLayout
        android:gravity="center"
        android:layout_width="360dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true">
        <com.nebula.uikit.svgaplayer.SVGAImageView
            android:id="@+id/bg_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:id="@+id/total_container"
        android:layout_width="360dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/from_container"
            android:background="@drawable/b_relation_tassels_header"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true">
            <com.funny.yari.ui.widget.CircleImageView
                android:id="@+id/from_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_profile_default_big"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/center_divider"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/from_container"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/to_container"
            android:layout_toEndOf="@+id/from_container">
            <ImageView
                android:id="@+id/love"
                android:layout_width="53dp"
                android:layout_height="46dp"/>
        </LinearLayout>
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/become_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_layout"
            android:layout_toEndOf="@+id/from_container"/>
        <RelativeLayout
            android:id="@+id/to_container"
            android:background="@drawable/b_relation_tassels_header"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/center_divider">
            <com.funny.yari.ui.widget.CircleImageView
                android:id="@+id/to_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_profile_default_big"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>