<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bg_container"
        android:background="@drawable/svip_level_up_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="364dp"/>
    <com.nebula.uikit.animplayer.AnimView
        android:id="@+id/base_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        app:anim_view_auto_dismiss="false"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="317dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/svip_db"
                android:layout_width="match_parent"
                android:layout_height="93dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/uvi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svip_level_up_left_icon"/>
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="13dp"
                    android:textColor="#ffdf7e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yr_unlock_valuable_items"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svip_level_up_right_icon"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/valuable_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/uvi"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ulp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/valuable_list">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svip_level_up_left_icon"/>
                <com.nebula.uikit.textview.RobotoMediumTextView
                    android:textSize="13dp"
                    android:textColor="#ffdf7e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yr_unlock_privilege"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/svip_level_up_right_icon"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/privilege_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ulp"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/bottom_layout"
        android:paddingBottom="22dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textColor="@color/color_7d540c"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ok"
            android:background="@drawable/bg_svip_limits_dialog_btn"
            android:layout_width="226dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_close_big"/>
    </LinearLayout>
</RelativeLayout>