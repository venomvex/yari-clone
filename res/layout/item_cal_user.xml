<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/rank_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="14dp"
                android:textColor="@color/grey_616366"
                android:gravity="center"
                android:id="@+id/rank_count"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <com.funny.yari.ui.widget.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user_profile_default_big"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/left_layout"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/left_layout"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="16dp"
            android:textColor="@color/live_black_161823"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:layout_toLeftOf="@+id/end_layout"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/end_layout"
            android:layout_toEndOf="@+id/user_icon"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/end_layout"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/other_star_icon"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="12dp"
                android:textColor="#ff5b22"
                android:id="@+id/contribute_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>