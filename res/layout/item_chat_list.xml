<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/header_time_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:id="@+id/header_time_text"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/receive"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/receive_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/receive_layout"
                android:layout_alignParentStart="true">
                <com.funny.yari.ui.widget.RoundImageView
                    android:id="@+id/receive_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/receive_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingStart="4dp"
                android:layout_alignParentStart="true">
                <FrameLayout
                    android:id="@+id/receive_frame"
                    android:background="@drawable/you_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/receive_container"
                        android:paddingTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxWidth="207dp"/>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:layout_gravity="center"
            android:id="@+id/receive_revoke"
            android:background="@drawable/bg_message_time"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_other_call_back_message"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/send_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingEnd="4dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/send_failed_icon"
                    android:visibility="gone"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/send_failed"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@+id/send_frame"/>
                <FrameLayout
                    android:id="@+id/send_frame"
                    android:background="@drawable/me_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:id="@+id/send_container"
                        android:paddingTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxWidth="207dp"
                        android:text="1"/>
                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/send_layout"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/send_layout"
                android:layout_alignParentEnd="true">
                <com.funny.yari.ui.widget.RoundImageView
                    android:id="@+id/send_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:layout_gravity="center"
            android:id="@+id/send_revoke"
            android:background="@drawable/bg_message_time"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_call_back_message"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/im_color"
            android:layout_gravity="end"
            android:id="@+id/send_failed_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yr_send_failed_tip"
            android:layout_marginEnd="52dp"/>
    </LinearLayout>
</RelativeLayout>