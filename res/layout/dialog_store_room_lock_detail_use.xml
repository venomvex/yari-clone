<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_close_54"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black_303133"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:text="@string/yr_title_frame"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"/>
        <ImageView
            android:id="@+id/head_cover"
            android:visibility="visible"
            android:layout_width="118dp"
            android:layout_height="118dp"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ff303133"
            android:id="@+id/time"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:drawableLeft="@drawable/ic_store_clock_time"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_store_clock_time"/>
        <TextView
            android:textSize="14dp"
            android:id="@+id/svip_desc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:drawablePadding="2dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/grey_616366"
            android:gravity="center"
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:text=""
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/ok"
            android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_22"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/yr_ok"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/grey_c2c4cb"
            android:gravity="center"
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
</RelativeLayout>