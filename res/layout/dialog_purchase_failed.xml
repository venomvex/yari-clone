<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black_303133"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="13dp"
        android:text="@string/yr_recharge_failed"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#ff303133"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:text="@string/yr_recharge_help_tips"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/contact_us"
        android:background="@drawable/s_gradient_1bd9b3_19cc9d_22_bg"
        android:layout_width="174dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:text="@string/yr_help_center"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/ok"
        android:background="@drawable/s_rectangle_grey_c2c4cb_23"
        android:layout_width="174dp"
        android:layout_height="38dp"
        android:layout_marginBottom="24dp"
        android:text="@string/yr_cancel"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"/>
</LinearLayout>