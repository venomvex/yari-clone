<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nebula.uikit.textview.RobotoBoldTextView
            android:textSize="28dp"
            android:textColor="#ffffe601"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="20dp"
            android:text="Congratulations"
            android:maxLines="4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:text="Obtain New Medal"
            android:maxLines="4"
            android:layout_below="@+id/title_text"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:id="@+id/badge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/sub_title"
            android:layout_centerHorizontal="true"/>
        <com.nebula.uikit.svgaplayer.SVGAImageView
            android:id="@+id/back_img"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_below="@+id/sub_title"
            android:layout_centerHorizontal="true"
            app:autoPlay="true"
            app:loopCount="-1"
            app:source="level_up_bg.svga"/>
        <ImageView
            android:id="@+id/font_img"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_below="@+id/badge_name"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/level_img"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_below="@+id/badge_name"
            android:layout_centerHorizontal="true"
            app:autoPlay="true"
            app:loopCount="1"/>
        <include
            android:id="@+id/star_layout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/font_img"
            android:layout_centerHorizontal="true"
            layout="@layout/include_star_20dp_layout"/>
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="14dp"
            android:textColor="#ffffe286"
            android:gravity="center"
            android:id="@+id/reward_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/star_layout"
            android:layout_centerHorizontal="true"/>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/check_btn"
            android:background="@drawable/s_gradient_ffffef3d_liner_ffffcc02_25"
            android:layout_width="226dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="Wear the Medal"
            android:layout_below="@+id/reward_desc"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/close"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:src="@drawable/ic_close_big"
            android:layout_below="@+id/check_btn"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>