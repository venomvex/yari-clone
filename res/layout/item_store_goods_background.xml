<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">
    <com.funny.yari.ui.widget.RoundRectImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        app:cornerRadius="6dp"/>
    <com.nebula.uikit.svgaplayer.SVGAImageView
        android:id="@+id/header_move_icon"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        app:autoPlay="true"
        app:loopCount="-1"/>
    <com.nebula.uikit.animplayer.AnimView
        android:id="@+id/anim_player"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/grey_bg"
        android:background="@drawable/s_gradient_grey_0_a6_bg_10"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_centerHorizontal="true"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginBottom="7dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_centerHorizontal="true"
        layout="@layout/include_star_12dp_layout"/>
    <com.nebula.uikit.textview.RobotoRegularTextView
        android:textSize="13dp"
        android:gravity="center"
        android:id="@+id/bottom_state_text"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true">
        <com.nebula.uikit.textview.RobotoRegularTextView
            android:textSize="11dp"
            android:textColor="@color/black_333333"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            android:text=""/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.nebula.uikit.textview.RobotoBoldTextView
                android:textSize="13dp"
                android:textColor="@color/black_303133"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1699"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_money_icon"/>
            <TextView
                android:textSize="11dp"
                android:textColor="@color/color_999999"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/3 Days"
                android:drawablePadding="3dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="11dp"
                android:id="@+id/svip_desc"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="13dp"
            android:textColor="@color/black_333333"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/use"
            android:background="@drawable/b_corners_ffffef3d_linear_ffffcc02_15"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>
    </LinearLayout>
</RelativeLayout>