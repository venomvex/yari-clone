<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f4f4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/top_layout"
        android:background="@drawable/red_bag_detail_top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/title_layout"
            android:background="@color/appcolor_transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="36dp">
            <ImageView
                android:id="@+id/back"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back_white"
                android:scaleType="centerInside"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"/>
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/yr_details"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/info"
                android:paddingLeft="9dp"
                android:paddingTop="16dp"
                android:paddingRight="15dp"
                android:paddingBottom="16dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ranking_info"
                android:paddingStart="9dp"
                android:paddingEnd="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_red_bag_detail_border"
            android:padding="2dp"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginTop="10dp">
            <com.funny.yari.ui.widget.CircleImageView
                android:id="@+id/lucky_draw_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_profile_default_big"/>
        </LinearLayout>
        <com.nebula.uikit.textview.RobotoMediumTextView
            android:textSize="15dp"
            android:textColor="@color/white"
            android:id="@+id/lucky_draw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp"
            android:text="Nick Name"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/main_panel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/warning_layout"
            android:background="#fff8db"
            android:layout_width="match_parent"
            android:layout_height="34dp">
            <com.nebula.uikit.textview.RobotoRegularTextView
                android:textSize="13dp"
                android:textColor="@color/gray_666666"
                android:id="@+id/warning_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/red_bag_reward_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include
            android:id="@+id/empty_view"
            android:visibility="gone"
            layout="@layout/dialog_empty"/>
    </LinearLayout>
    <include
        android:id="@+id/load_view"
        android:visibility="visible"
        layout="@layout/dialog_loading"/>
</RelativeLayout>