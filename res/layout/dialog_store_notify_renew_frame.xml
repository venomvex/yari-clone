<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dialog_close_54"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black_303133"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/yr_title_frame"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="57dp"/>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="130dp">
            <com.funny.yari.ui.widget.CircleImageView
                android:id="@+id/head"
                android:visibility="gone"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/icon"
                android:visibility="gone"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"/>
            <com.nebula.uikit.svgaplayer.SVGAImageView
                android:id="@+id/svga_icon"
                android:visibility="gone"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                app:autoPlay="true"
                app:loopCount="-1"/>
            <TextView
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:id="@+id/discount"
                android:background="@drawable/ic_store_buy_discount"
                android:paddingTop="2dp"
                android:paddingBottom="3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignRight="@+id/head"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginEnd="-40dp"
                android:layout_alignEnd="@+id/head"/>
        </RelativeLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black_303133"
            android:gravity="center"
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=""
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/black_303133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yr_store_price"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff8536cd"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:drawableLeft="@drawable/ic_diamond_item"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_diamond_item"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/grey_9b9ca1"
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/yellow_ff9100"
                android:gravity="center"
                android:id="@+id/action_left"
                android:background="@drawable/shape_rectangle_line_ffa200_20"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/yr_btn_go_to_store"
                android:layout_weight="1"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/black_333333"
                android:gravity="center"
                android:id="@+id/action_right"
                android:background="@drawable/shape_gradient_19cc9d_1bd9b3_23"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/yr_btn_renew"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="31dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>