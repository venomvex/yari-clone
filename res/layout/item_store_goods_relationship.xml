<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingTop="12dp"
    android:paddingRight="3dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="3dp"
    android:paddingEnd="3dp">
    <ImageView
        android:id="@+id/icon"
        android:visibility="visible"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"/>
    <com.nebula.uikit.svgaplayer.SVGAImageView
        android:id="@+id/header_move_icon"
        android:visibility="gone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        app:autoPlay="true"
        app:loopCount="-1"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_303133"
        android:gravity="center"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text=""/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black_303133"
        android:gravity="center"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text=""
        android:drawableLeft="@drawable/ic_store_clock_time"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_store_clock_time"/>
    <com.nebula.uikit.textview.RobotoRegularTextView
        android:textSize="11dp"
        android:id="@+id/svip_desc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/colorWhite"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/use"
        android:background="@drawable/s_gradient_59dab8_19cc9d_15_bg_x"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="88dp"
        android:layout_height="26dp"
        android:text=""
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:marqueeRepeatLimit="marquee_forever"/>
</LinearLayout>