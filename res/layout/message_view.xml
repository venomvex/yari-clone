<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/container"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/header_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"
                android:id="@+id/in_room"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="user_living.json"
                app:lottie_imageAssetsFolder="images"
                app:lottie_repeatCount="-1"
                app:lottie_repeatMode="restart"/>
            <com.funny.yari.ui.widget.RoundImageView
                android:id="@+id/img"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
            <View
                android:id="@+id/online_tag"
                android:background="@drawable/bg_im_online"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:paddingEnd="20dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/search_item_title_color"
                        android:gravity="start"
                        android:layout_gravity="bottom"
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        android:textAlignment="viewStart"
                        android:layout_marginEnd="6dp"/>
                    <ImageView
                        android:id="@+id/seller_icon"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:adjustViewBounds="true"/>
                </LinearLayout>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffc1c1c1"
                    android:gravity="end"
                    android:layout_gravity="bottom"
                    android:id="@+id/message_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="0.3"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingEnd="20dp">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/message_subtitle_color"
                    android:gravity="start"
                    android:layout_gravity="top"
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="2"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:id="@+id/message_count"
                    android:background="@drawable/bg_message_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="#1a000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>