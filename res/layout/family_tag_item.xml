<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="29dp">
    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginStart="-10dp"
        android:layout_toEndOf="@+id/name_tag_icon"
        android:layout_alignEnd="@+id/ft_empty_view"/>
    <ImageView
        android:id="@+id/name_tag_icon"
        android:layout_width="29dp"
        android:layout_height="match_parent"/>
    <com.nebula.uikit.textview.RobotoMediumTextView
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:id="@+id/name_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxEms="8"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:layout_centerVertical="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/name_tag_icon"/>
    <View
        android:id="@+id/ft_empty_view"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_toEndOf="@+id/name_tag"/>
</RelativeLayout>