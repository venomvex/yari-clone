<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/header_time_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:id="@+id/header_time_text"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/message_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/send_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:paddingEnd="4dp"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/send_failed_icon"
                        android:visibility="visible"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/send_failed"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"
                        android:layout_toStartOf="@+id/send_frame"/>
                    <FrameLayout
                        android:id="@+id/send_frame"
                        android:background="@drawable/me_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#303133"
                            android:gravity="center_vertical"
                            android:id="@+id/send_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:adjustViewBounds="true"
                            android:maxWidth="207dp"
                            android:text="1"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#c2c4cb"
                            android:layout_gravity="end|bottom"
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:text="2"/>
                    </FrameLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/send_layout"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/send_layout"
                    android:layout_alignParentEnd="true">
                    <com.funny.yari.ui.widget.RoundImageView
                        android:id="@+id/send_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/im_color"
                android:layout_gravity="end"
                android:id="@+id/send_failed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yr_send_failed_tip"
                android:layout_marginEnd="52dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/bottom_waring_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="start|center_vertical"
                android:id="@+id/warning_text"
                android:background="@drawable/shape_c2ccc8_4_bg"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:text="@string/yr_unsupport_message"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>