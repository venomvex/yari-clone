<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:useLevel="true">
            <solid android:color="#00000000"/>
            <stroke
                android:width="1.5dp"
                android:color="@color/color_1bd9b3"/>
            <size
                android:height="64dp"
                android:width="64dp"/>
            <corners android:radius="4dp"/>
            <padding
                android:left="1.5dp"
                android:top="1.5dp"
                android:right="1.5dp"
                android:bottom="1.5dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#defff8"
                android:endColor="#defff8"
                android:angle="90"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>